{
  "compilerOptions": {
    "module": "nodenext", // ESM modules
    "moduleResolution": "nodenext", // use nodenext for correct Node ESM resolution
    "target": "ESNext",
    "esModuleInterop": true, // allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true, // if you import .json configs
    "types": ["node"] // include Node.js types
  }
}
